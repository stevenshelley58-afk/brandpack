{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@brandpack/core": ["packages/core/src/index.ts"],
      "@brandpack/core/*": ["packages/core/src/*"],
      "@brandpack/adapters": ["packages/adapters/src/index.ts"],
      "@brandpack/adapters/*": ["packages/adapters/src/*"],
      "@brandpack/ui": ["packages/ui/src/index.tsx"],
      "@brandpack/ui/*": ["packages/ui/src/*"]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true
  }
}
