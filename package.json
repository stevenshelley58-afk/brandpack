{
  "name": "brandpack",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=18.17"
  },
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "npm run build:packages && npm run build:web",
    "build:packages": "tsc -b",
    "build:web": "npm run build --workspace=web",
    "dev": "npm run build:packages && npm run dev --workspace=web",
    "install:all": "npm install && npm run build:packages"
  }
}

